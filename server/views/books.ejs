<!DOCTYPE html>
<html>

<head>
  <title>All Books | OldBookHub</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    .card-img-top {
      height: 220px;
      object-fit: cover;
    }

    .card {
      border-radius: 15px;
      transition: transform 0.2s;
    }

    .card:hover {
      transform: scale(1.03);
    }
  </style>
</head>

<body class="bg-light">
  <div class="container mt-5">
    <form class="d-flex justify-content-center mb-4" method="GET" action="/books">
      <input type="text" class="form-control w-50 me-2" name="location" placeholder="Enter city or area...">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>

    <h2 class="text-center mb-4">ğŸ“š All Available Books</h2>
    <div class="row justify-content-center">
      <% books.forEach(book=> { %>
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card shadow-sm h-100">
            <% if (book.image) { %>
              <img src="<%= book.image.url%>" class="card-img-top" alt="Book Image">
              <% } else { %>
                <img src="/images/default-book.png" class="card-img-top" alt="No Image">
                <% } %>

                  <div class="card-body">
                    <h5 class="card-title text-primary">
                      <%= book.title %>
                    </h5>
                    <p class="card-text mb-1">ğŸ‘¨â€ğŸ’¼ Author: <%= book.author %>
                    </p>
                    <p class="card-text mb-1">ğŸ’° Price: â‚¹<%= book.price %>
                    </p>
                    <p class="card-text small text-muted">
                      <%= book.description %>
                    </p>

                    <!-- ğŸ†• Buy Now Button -->
                    <!-- ğŸ†• Conditional Button -->
                    <% if (book.isDonated) { %>
                      <a href="/buy/<%= book._id %>" class="btn btn-sm btn-warning w-100 mt-2">
                        ğŸ Donate
                      </a>
                      <% } else { %>
                        <a href="/buy/<%= book._id %>" class="btn btn-sm btn-success w-100 mt-2">
                          ğŸ›’ Buy Now
                        </a>
                        <% } %>

                  </div>
          </div>
        </div>
        <% }) %>
    </div>

    <div class="text-center mt-4">
      <a href="/dashboard" class="btn btn-outline-dark">Back to Dashboard</a>
    </div>
  </div>
</body>

</html>